root = true

[*]
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

# Tab indentation (no size specified)
[*.{el,md,coffee,pp,yml,js,go}]
indent_style = space
indent_size = 2

[*.{py,sh}]
indent_style = space
indent_size = 4

# Tabs in less
[*.less]
indent_style = tab
indent_size = 2

[*.css]
indent_style = tab
indent_size = 2

[Makefile]
indent_style = tab

[Vagrantfile]
indent_style = tab
indent_size = 2

[*.html]
indent_style = space
indent_size = 2
